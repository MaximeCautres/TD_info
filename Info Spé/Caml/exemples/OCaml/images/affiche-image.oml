#load "unix.cma";;
#load "graphics.cma";;
open Unix;;
open Graphics;;

let wd = getcwd() in
  let canal_in = open_in_bin (wd ^ "/exemples/OCaml/images/image")
  in
    let v = (input_value canal_in: color array array)
    in
      let sx = string_of_int (Array.length v.(0))
      and sy = string_of_int (Array.length v)
      in
        open_graph (" " ^ sx ^ "x" ^ sy);
        draw_image (make_image v) 0 0;
        close_in canal_in
;;
